<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/cetak_color</item>
        <item name="colorControlActivated">@color/cetak_color</item>
    </style>

    <style name="Modal" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    </style>

    <style name="LightBox" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/ModalDefaultAnimations</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    </style>

    <style name="ModalDefaultAnimations">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="ModalFadeAnimation">
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ModalNoAnimation">
        <item name="android:windowEnterAnimation">@anim/no_animation</item>
        <item name="android:windowExitAnimation">@anim/no_animation</item>
    </style>

    <style name="ModalSlideHorizontal">
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="ModalScreenAnimations">
        <item name="android:windowExitAnimation">@anim/pop</item>
    </style>

    <!--Alert Prompt-->
    <style name="ShimoAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/prompt_color</item>
    </style>

    <style name="ShimoEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/prompt_color</item>
        <item name="colorControlActivated">@color/prompt_color</item>
        <item name="colorControlHighlight">@color/prompt_color</item>
    </style>

</resources>
